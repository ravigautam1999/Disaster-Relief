<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UrbanFloodGuideline"
    tools:showIn="@layout/activity_urban_flood_guideline"
    android:background="@drawable/ip15">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guideline"
                android:textAlignment="center"
                android:textSize="34sp"
                android:layout_marginStart="0dp"
                android:textColor="@color/white1"
                android:layout_marginBottom="12dp"

                />

            <Button
                android:id="@+id/btnFloodsgo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00141642"
                android:text="Urban Floods Guideline"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="#CC0D0D">

            </Button>

            <View
                android:layout_width="220dp"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:background="#E01919" />









        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>